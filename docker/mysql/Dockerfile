FROM mysql:8.0.31

ARG DATABASE_HOST
ARG DATABASE_NAME
ARG DATABASE_USER
ARG DATABASE_PASSWORD
ARG DATABASE_ROOT_PASSWORD

ENV MYSQL_USER $DATABASE_USER
ENV MYSQL_PASSWORD $DATABASE_PASSWORD
ENV MYSQL_ROOT_PASSWORD $DATABASE_ROOT_PASSWORD
ENV MYSQL_DATABASE $DATABASE_NAME

COPY  ./database/$DATABASE_NAME.sql /docker-entrypoint-initdb.d/$DATABASE_NAME.sql